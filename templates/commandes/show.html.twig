    <a class="btn btn-secondary rounded-custom mb-3" href="{{ path('app_commandes_index') }}">Retour à la liste</a>
        <div id="cart-table" class="table-responsive">
            <table class="table table-striped table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Quantité</th>
                        <th>Prix</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    {% for produitDetail in produitsDetails %}
                    <tr id="tr{{produitDetail.produit.id}}">
                        <td><img class="imagePanier" src="/Images/ImgCartes/small/{{ produitDetail.produit.ygoId }}.jpg" alt="{{ produitDetail.produit.nomProduit }}"></td>
                        <td>{{ produitDetail.produit.nomProduit }}</td>
                        <td>{{ produitDetail.quantite }}</td>
                        <td>{{ produitDetail.produit.prix }}</td>
                        <td><span id="total{{ produitDetail.produit.id }}">{{ (produitDetail.total)|number_format(2) }} €</span></td>
                    </tr>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3"></td>
                        <td>Montant total :</td>
                        <td><span id="montantTotal">{{ (totalPanier)|number_format(2) }}</span> €</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </main>
{% endblock %}


