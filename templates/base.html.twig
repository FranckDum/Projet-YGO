{# Déclare le type de document et commence le document HTML #}
<!DOCTYPE html>
<html>

    <head>
        {# Définit l'encodage des caractères et fournit le titre du document HTML #}
        <meta charset="UTF-8">
        <title>{% block title %}YGO_ECommerce{% endblock %}</title>

        {# Liens vers le fichier CSS Bootstrap hébergé sur un CDN (Content Delivery Network) #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

        {# Liens vers un fichier CSS personnalisé #}
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">

        {# Placeholder pour des feuilles de style supplémentaires pouvant être incluses dans des modèles étendus #}
        {% block stylesheets %}{% endblock %}
        
    </head>

    <body>

        {# Barre de navigation utilisant Bootstrap #}
        <nav class="navbar navbar-expand-lg bg-body-tertiary">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">YGO_ECommerce</a>

                {# Bouton de bascule de navigation Bootstrap pour les écrans plus petits #}
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                {# Liens de navigation #}
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{path('accueil')}}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('cartes_all')}}">Carte à l'unité</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_user_index')}}">BDD User</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{path('app_user_new')}}">Inscription</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        {# Zone de contenu principal utilisant le système de grille Bootstrap #}
        <main class="col-md-10 mx-auto p-2">
            Titre de la page
            <h1 class="text-center text-secondary fst-italic my-2">{% block h1 %}{% endblock %}</h1>

            {# Placeholder pour le contenu principal de la page #}
            {% block body %}{% endblock %}
        </main>

        {# Fichiers JavaScript Bootstrap pour les composants interactifs #}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

        {# Fichier JavaScript personnalisé #}
        <script src="{{ asset('js/script.js')}}"></script>

        {# Placeholder pour des scripts JavaScript supplémentaires pouvant être inclus dans des modèles étendus #}
        {% block javascripts %}{% endblock %}    

    </body>
</html>
