{# Déclaration du type de document et début du document HTML #}
<!DOCTYPE html>
<html lang="fr">

<head>
    {# Balise head contenant les métadonnées et les liens vers les feuilles de style #}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Duel-Destiny-Shop!{% endblock %}</title>

    {% block jQuery %}{% endblock %}
    {% block select2 %}{% endblock %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <link rel="stylesheet" href="{{ asset('css/style.css')}}">
    {# Placeholder pour les feuilles de style supplémentaires pouvant être incluses dans des modèles étendus #}
    {% block stylesheets %}{% endblock %}
</head>

<body>

    {% include "_nav.html.twig" %}
    {# Zone de contenu principal #}

        <h1 class="text-center font-face fw-bold">{% block h1 %}{% endblock %}</h1>
        {# Placeholder pour le contenu principal de la page #}
        {% block body %}{% endblock %}


    <div>
    <footer class="bd-footer py-4 py-md-5 mt-5 bg-dark">{% block footer %}Nous contacter{% endblock %}</footer>
    </div>
    {# Fichiers JavaScript Bootstrap pour les composants interactifs #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    {# Fichier JavaScript personnalisé #}
    <script src="{{ asset('js/script.js')}}"></script>
    {# Placeholder pour des scripts JavaScript supplémentaires pouvant être inclus dans des modèles étendus #}
    {% block javascripts %}{% endblock %}
</body>

</html>
