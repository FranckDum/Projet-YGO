<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Bootstrap demo</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    </head>
    <body>
        <h1 class="text-center my-3 display-5">Liste des cartes</h1>

        

        <div class="container">

            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning" role="alert">
                    {{message}}
                </div>
            {% endfor %}

            {{form_start(form)}}
                <div class="row">
                    <div class="col-md-2">
                        {{form_widget(form.type, {'class':'form-control'})}}
                    </div>
                    <div class="col-md-2">
                        {{form_widget(form.atk, {'class':'form-control'})}}
                    </div>
                    <div class="col-md-2">
                        {{form_widget(form.def, {'class':'form-control'})}}
                    </div>
                    <div class="col-md-2">
                        {{form_widget(form.level, {'class':'form-control'})}}
                    </div>
                    <div class="col-md-2">
                        {{form_widget(form.race, {'class':'form-control'})}}
                    </div>
                    <div class="col-md-2">
                        {{form_widget(form.attribute, {'class':'form-control'})}}
                    </div>
                    <div>
                        <input type="submit" class="btn btn-sm btn-primary w-100" value="Filtrer">
                    </div>
                </div>
            {{form_end(form)}}
        </div>
            
            {# total items count #}
            <div class="count">
                {{ cards.getTotalItemCount }}
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Id</td>
                            <th>Name</td>
                            <th>Type</td>
                            <th>atk</td>
                            <th>def</td>
                            <th>level</td>
                            <th>race</td>
                            <th>attribute</td>
                        </tr>
                    </thead>
                    <tbody>
                        {% for card in cards %}
                            <tr>
                                <td>{{card.id}}</td>
                                <td>{{card.name ?? 'Non renseigné'}}</td>
                                <td>{{card.type ?? 'Non renseigné'}}</td>
                                <td>{{card.atk ?? 'Non renseigné'}}</td>
                                <td>{{card.def ?? 'Non renseigné'}}</td>
                                <td>{{card.level ?? 'Non renseigné'}}</td>
                                <td>{{card.race ?? 'Non renseigné'}}</td>
                                <td>{{card.attribute ?? 'Non renseigné'}}</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

            {# display navigation #}
            <div class="my-3">
                {{ knp_pagination_render(cards) }}
            </div>
            </div>
        </div>



        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    </body>
</html>