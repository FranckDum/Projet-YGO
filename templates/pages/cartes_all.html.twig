{% extends "base.html.twig" %}

{% block h1 %}Carte à l'unité{% endblock %}

{% block jQuery %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
<script>
    $(document).ready( function () {
        $('#myTable').DataTable({
            language: {
                url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/fr-FR.json',
            },
        });
    });
</script>
{% endblock %}

{% block dataTables %}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.10/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.10/datatables.min.js"></script>
{% endblock %}


{% block body %}

    <section class= "container">

        <div class="row d-flex justify-content-center">

            {% for card in productsWithCard %}
                {% set t_produit = card.product %}
                {% set carte = card.card %}

                            <div class="col-md-6 col-lg-3 d-flex flex-column align-items-center border border-3 border-opacity-50 border-black mx-3 my-3 rounded bg-secondary carte">

                                <a class"a" href="{{ path('detailProduit', {'id': t_produit.id}) }}">
                                <h2 class="text-center"> {{ t_produit.nomProduit }} </h2>
                                </a>
                                <div class="mt-auto">
                                    <div class="accordion" id="accordionDesc_{{t_produit.ygoId}}">
                                        <div class="accordion-item">
                                            <h2 class="accordion-header">
                                                <a class"a" href="{{ path('detailProduit', {'id': t_produit.id}) }}">
                                                <img class="img-fluid" src="/Images/ImgCartes/normal/{{carte.id}}.jpg">
                                                </a>
                                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_{{t_produit.ygoId}}" aria-expanded="true" aria-controls="collapse_{{t_produit.ygoId}}">
                                                    Description :
                                                </button>
                                            </h2>
                                            <div id="collapse_{{t_produit.ygoId}}" class="accordion-collapse collapse" data-bs-parent="#accordionDesc_{{t_produit.ygoId}}">
                                                <div class="accordion-body">
                                                    {{ carte.desc }}
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                        <div>Stock : {{ t_produit.stock }}</div>
                                        <div>{{ t_produit.prix|number_format(2) }} €</div>
                                </div>
                            </div>

            {% endfor %}
        </div>

        <nav aria-label="Page navigation example"> <!-- Début de la barre de pagination -->
            <ul class="pagination justify-content-center"> <!-- Liste des éléments de pagination, centrée -->
                <!-- Bouton "Première page" -->
                <li class="page-item {% if app.request.query.get('offset', '0')|default(0) == 0 %}disabled{% endif %}"> <!-- Item de pagination pour la première page, désactivé si déjà sur la première page -->
                    <a class="page-link" href="?offset=0" aria-label="First"> <!-- Lien vers la première page -->
                        <span aria-hidden="true">&lt;&lt;</span> <!-- flèche double vers la gauche -->
                    </a>
                </li>

                <!-- Bouton "Précédent" -->
                <li class="page-item {% if app.request.query.get('offset', '0')|default(0) == 0 %}disabled{% endif %}"> <!-- Item de pagination pour la page précédente, désactivé si déjà sur la première page -->
                    <a class="page-link" href="?offset={{ max(0, (app.request.query.get('offset', '0')|default(0)) - 18) }}" aria-label="Previous"> <!-- Lien vers la page précédente -->
                        <span aria-hidden="true">&laquo;</span> <!-- flèche simple vers la gauche -->
                    </a>
                </li>

                <!-- Affichage des pages -->
                {% set currentPage = (app.request.query.get('offset', '0')|default(0)) // 18 + 1 %} <!-- Calcul de la page actuelle -->
                {% set startPage = max(1, currentPage - 3) %} <!-- Détermination de la première page à afficher -->
                {% set endPage = min(meta.total_pages, startPage + 5) %} <!-- Détermination de la dernière page à afficher -->
                {% for i in startPage..endPage %} <!-- Boucle pour afficher les pages -->
                    {% set offset = (i - 1) * 18 %}
                    {% if offset == app.request.query.get('offset', '0')|default(0) %}
                        <li class="page-item active" aria-current="page"><span class="page-link">{{ i }}</span></li> <!-- Page actuelle, affichée comme active -->
                    {% else %}
                        <li class="page-item"><a class="page-link" href="?offset={{ offset }}">{{ i }}</a></li> <!-- Autres pages -->
                    {% endif %}
                {% endfor %}

                <!-- Bouton "Suivant" -->
                <li class="page-item {% if app.request.query.get('offset', '0')|default(0) == ((meta.total_pages - 1) * 18) %}disabled{% endif %}"> <!-- Item de pagination pour la page suivante, désactivé si déjà sur la dernière page -->
                    <a class="page-link" href="?offset={{ min((meta.total_pages - 1) * 18, (app.request.query.get('offset', '0')|default(0)) + 18) }}" aria-label="Next"> <!-- Lien vers la page suivante -->
                        <span aria-hidden="true">&raquo;</span> <!-- flèche simple vers la droite -->
                    </a>
                </li>

                <!-- Bouton "Dernière page" -->
                <li class="page-item {% if app.request.query.get('offset', '0')|default(0) == ((meta.total_pages - 1) * 18) %}disabled{% endif %}"> <!-- Item de pagination pour la dernière page, désactivé si déjà sur la dernière page -->
                    <a class="page-link" href="?offset={{ (meta.total_pages - 1) * 18 }}" aria-label="Last"> <!-- Lien vers la dernière page -->
                        <span aria-hidden="true">&gt;&gt;</span> <!-- flèche double vers la droite -->
                    </a>
                </li>
            </ul>
        </nav>

    </section>

{% endblock %}