{% extends 'base.html.twig' %}

{% block title %}Fiche adresse de facturation de {{ adresse_facturation.user.nom }} {{ adresse_facturation.user.prenom }}{% endblock %}
{% block h1 %}Fiche adresse de facturation de {{ adresse_facturation.user.nom }} {{ adresse_facturation.user.prenom }}{% endblock %}

{% block body %}
    <main class="container mx-auto p-2">
        <a class="btn btn-secondary rounded-custom mb-2" href="{{ path('app_adresse_facturation_index') }}">Retour</a>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ adresse_facturation.id }}</td>
                </tr>
                <tr>
                    <th>Adresse_facturation</th>
                    <td>{{ adresse_facturation.adresseFacturation }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ adresse_facturation.user.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ adresse_facturation.user.prenom }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ adresse_facturation.adresse }}</td>
                </tr>
                    <th>Complément d'adresse</th>
                    <td>{{ adresse_facturation.complementAdresse }}</td>
                </tr>
                <tr>
                    <th>Code Postal</th>
                    <td>{{ adresse_facturation.cp }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ adresse_facturation.ville }}</td>
                </tr>
            </tbody>
        </table>

        {# <a href="{{ path('app_adresse_facturation_edit', {'id': adresse_facturation.id}) }}">Modifier</a>

        {{ include('adresse_facturation/_delete_form.html.twig') }} #}
    </main>
{% endblock %}
