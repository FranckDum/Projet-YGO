{% extends 'base.html.twig' %}

{% block title %}Adresse Livraison{% endblock %}
{% block h1 %}Adresse Livraison{% endblock %}

{% block body %}
    <main class="container mx-auto p-2">
        <table class="table">
            <thead>
                <tr>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Id</th>
                    {% endif %}
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Adresse</th>
                    <th>Complément d'adresse (facultatif)</th>
                    <th>Code Postal</th>
                    <th>Ville</th>
                    <th>Commentaire (facultatif)</th>
                    {% if is_granted('ROLE_ADMIN') %}
                        <th>Fiche</th>
                    {% endif %}
                    {% if "ROLE_ADMIN" not in app.user.roles %}
                        <th>Modifier</th>
                    {% endif %}
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
            {% for adresse_livraison in adresse_livraisons %}
                <tr>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>{{ adresse_livraison.id }}</td>
                    {% endif %}
                    <td>{{ adresse_livraison.nom }}</td>
                    <td>{{ adresse_livraison.prenom }}</td>
                    <td>{{ adresse_livraison.adresse }}</td>
                    <td>{{ adresse_livraison.complementAdresse }}</td>
                    <td>{{ adresse_livraison.Cp }}</td>
                    <td>{{ adresse_livraison.ville }}</td>
                    <td>{{ adresse_livraison.commentaire }}</td>
                    {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            <a class="btn btn-secondary rounded-custom" href="{{ path('app_adresse_livraison_show', {'id': adresse_livraison.id}) }}">Fiche</a>
                        </td>
                    {% endif %}
                    {% if "ROLE_ADMIN" not in app.user.roles %}
                        <td>
                            <a class="btn btn-success rounded-custom" href="{{ path('app_adresse_livraison_edit', {'id': adresse_livraison.id}) }}">Modifier</a>
                        </td>
                    {% endif %}
                    <td>
                        <a class="btn btn-danger rounded-custom" href="{{ path('app_adresse_livraison_delete', {'id': adresse_livraison.id}) }}">Suppr</a>
                    </td>
                </tr>
            {% else %}
            {% endfor %}
                {% if adresse_livraisons is empty %}
                    <p class="display-5 text-center text-danger">Aucun résultat</p>
                {% endif %}
            </tbody>
        </table>
        <a class="btn btn-primary rounded-custom mt-3" href="{{ path('app_adresse_livraison_new') }}">Créer nouvelle adresse de livraison</a>
    </main>
{% endblock %}
