{% extends 'base.html.twig' %}

{% block title %}Fiche adresse de livraison de {{ adresse_livraison.user.nom }} {{ adresse_livraison.user.prenom }}{% endblock %}
{% block h1 %}Fiche adresse de livraison de {{ adresse_livraison.user.nom }} {{ adresse_livraison.user.prenom }}{% endblock %}

{% block body %}
    <main class="container mx-auto p-2">
        <a class="btn btn-secondary rounded-custom mb-2" href="{{ path('app_adresse_livraison_index') }}">Retour</a>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ adresse_livraison.id }}</td>
                </tr>
                <tr>
                    <th>Adresse_livraison</th>
                    <td>{{ adresse_livraison.adresseLivraison }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ adresse_livraison.user.nom }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ adresse_livraison.user.prenom }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ adresse_livraison.adresse }}</td>
                </tr>
                    <th>Complément d'adresse</th>
                    <td>{{ adresse_livraison.complementAdresse }}</td>
                </tr>
                <tr>
                    <th>Code Postal</th>
                    <td>{{ adresse_livraison.cp }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ adresse_livraison.ville }}</td>
                </tr>
                <tr>
                    <th>Commentaire</th>
                    <td>{{ adresse_livraison.commentaire }}</td>
                </tr>
            </tbody>
        </table>

